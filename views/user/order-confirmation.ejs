<%- include('../layout/header') %>


    <!-- Order Confirmation Section -->
    <section class="max-w-4xl mx-auto px-6 py-12">
        <div class="bg-white rounded-lg shadow-lg p-8">
            <h2 class="text-3xl font-bold text-gray-800 text-center">Confirm Your Order</h2>
            <p class="text-gray-600 text-center">Please review your order and provide shipping and payment details.</p>

            <!-- Order Items -->
            <div class="space-y-4 my-8">
                <h3 class="text-xl font-semibold mb-4">Order Items</h3>
                <% cartItems.forEach(function(item) { %>
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <img src="<%= item.Product.image %>" alt="<%= item.Product.name %>" class="w-16 h-16 object-cover rounded">
                            <div class="ml-4">
                                <h4 class="font-semibold"><%= item.Product.name %></h4>
                                <p class="text-gray-600">Quantity: <%= item.quantity %></p>
                            </div>
                        </div>
                        <span class="font-semibold">Rp <%= item.Product.price * item.quantity %></span>
                    </div>
                <% }); %>
            </div>

            <!-- Shipping Address -->
            <div class="my-6">
                <h3 class="text-lg font-semibold mb-2">Shipping Address</h3>
                <p class="text-gray-600"><%= user.address || 'No address provided' %></p>
                <a href="/profile/edit-address" class="text-red-500 hover:text-red-600">Change Address</a>
            </div>

            <!-- Payment Method -->
            <div class="my-6">
                <h3 class="text-lg font-semibold mb-2">Payment Method</h3>
                <form action="/cart/checkout" method="POST">
                    <div class="space-y-2">
                        <% paymentMethods.forEach(function(method) { %>
                            <div>
                                <input type="radio" id="<%= method.id %>" name="paymentMethod" value="<%= method.id %>" class="mr-2" required>
                                <label for="<%= method.id %>" class="text-gray-700"><%= method.name %></label>
                            </div>
                        <% }); %>
                    </div>
                    <button type="submit" class="w-full bg-red-500 text-white py-3 rounded-lg mt-6 hover:bg-red-600 transition">
                        Proceed to Checkout
                    </button>
                </form>
            </div>

            <!-- Total Price -->
            <div class="flex justify-between font-semibold my-6">
                <span>Total</span>
                <span>Rp <%= totalPrice %></span>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-8">
        <div class="max-w-7xl mx-auto text-center">
            <p class="text-gray-400">&copy; 2025 Kilangan Tebu Uni Des. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>

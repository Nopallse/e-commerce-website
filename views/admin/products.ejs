<!DOCTYPE html>
<html>

<head>
    <title>Products Management</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="/output.css" rel="stylesheet">
    <script src="./node_modules/preline/dist/preline.js"></script>
</head>

<body class="bg-gray-50 dark:bg-slate-900">
    <%- include('../layout/sidebar') %>

        <!-- Main content -->
        <div class="w-full pt-10 px-4 sm:px-6 md:px-8 lg:ps-72">
            <!-- Page header -->
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-2xl font-semibold text-gray-800 dark:text-gray-200">Products</h1>
                <a href="/admin/add-product"
                    class="py-2 px-4 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700">
                    Add Product
                </a>
            </div>

            <!-- Products Table -->
            <div class="flex flex-col">
                <div class="-m-1.5 overflow-x-auto">
                    <div class="p-1.5 min-w-full inline-block align-middle">
                        <div
                            class="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden dark:bg-slate-900 dark:border-gray-700">
                            <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                                <thead class="bg-gray-50 dark:bg-slate-800">
                                    <tr>
                                        <th class="px-6 py-3 text-start">Name</th>
                                        <th class="px-6 py-3 text-start">Description</th>
                                        <th class="px-6 py-3 text-start">Price</th>
                                        <th class="px-6 py-3 text-start">Stock</th>
                                        <th class="px-6 py-3 text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                                    <% products.forEach(product=> { %>
                                        <tr>
                                            <td
                                                class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 dark:text-gray-200">
                                                <%= product.name %>
                                            </td>
                                            <td
                                                class="px-6 py-4 whitespace-nowrap text-sm text-gray-800 dark:text-gray-200">
                                                <%= product.description %>
                                            </td>
                                            <td
                                                class="px-6 py-4 whitespace-nowrap text-sm text-gray-800 dark:text-gray-200">
                                                $<%= product.price %>
                                            </td>
                                            <td
                                                class="px-6 py-4 whitespace-nowrap text-sm text-gray-800 dark:text-gray-200">
                                                <%= product.stock %>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-end text-sm font-medium">
                                                <a href="/admin/products/<%= product.id %>"
                                                    class="text-blue-500 hover:text-blue-700">Details</a>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Add Product Modal -->
            <div id="add-product-modal"
                class="hs-overlay hidden w-full h-full fixed top-0 start-0 z-[60] overflow-x-hidden overflow-y-auto">
                <div
                    class="hs-overlay-open:mt-7 hs-overlay-open:opacity-100 hs-overlay-open:duration-500 mt-0 opacity-0 ease-out transition-all sm:max-w-lg sm:w-full m-3 sm:mx-auto">
                    <div
                        class="bg-white border border-gray-200 rounded-xl shadow-sm dark:bg-gray-800 dark:border-gray-700">
                        <div class="p-4 sm:p-7">
                            <div class="text-center">
                                <h2 class="block text-2xl font-bold text-gray-800 dark:text-gray-200">Add New Product
                                </h2>
                            </div>

                            <div class="mt-5">
                                <form id="add-product-form">
                                    <div class="grid gap-y-4">
                                        <div>
                                            <label class="block text-sm mb-2 dark:text-white">Name</label>
                                            <input type="text" name="name"
                                                class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400 dark:focus:ring-gray-600"
                                                required>
                                        </div>

                                        <div>
                                            <label class="block text-sm mb-2 dark:text-white">Description</label>
                                            <textarea name="description"
                                                class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400 dark:focus:ring-gray-600"
                                                required></textarea>
                                        </div>

                                        <div>
                                            <label class="block text-sm mb-2 dark:text-white">Price</label>
                                            <input type="number" name="price"
                                                class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400 dark:focus:ring-gray-600"
                                                required>
                                        </div>

                                        <div>
                                            <label class="block text-sm mb-2 dark:text-white">Stock</label>
                                            <input type="number" name="stock"
                                                class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400 dark:focus:ring-gray-600"
                                                required>
                                        </div>

                                    

                                        <button type="submit"
                                            class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600">
                                            Add Product
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Add this before closing body tag -->
        <script>
            // Handle form submission
            document.getElementById('add-product-form').addEventListener('submit', async (e) => {
                e.preventDefault();
                const formData = new FormData(e.target);
                const data = Object.fromEntries(formData.entries());

                try {
                    const response = await fetch('/admin/products', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(data),
                    });

                    if (response.ok) {
                        HSOverlay.close(document.getElementById('add-product-modal'));
                        e.target.reset();
                        window.location.reload();
                    } else {
                        alert('Error adding product');
                    }
                } catch (error) {
                    console.error('Error adding product:', error);
                    alert('Error adding product');
                }
            });


        </script>
</body>

</html>
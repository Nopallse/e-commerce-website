<!-- views/admin/dashboard.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Ecommerce</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="/output.css" rel="stylesheet">
    <script src="./node_modules/preline/dist/preline.js"></script>
</head>
<body class="bg-gray-50 dark:bg-slate-900">
    <!-- ========== MAIN CONTENT ========== -->
    <!-- Sidebar -->
    <%- include('../layout/sidebar') %>
    <!-- End Sidebar -->

    <!-- Content -->
    <div class="w-full pt-10 px-4 sm:px-6 md:px-8 lg:pl-72">
        <!-- Page Heading -->
        <header>
            <div class="flex items-center justify-between mb-8">
                <h1 class="text-2xl font-semibold text-gray-900 dark:text-gray-100">Dashboard</h1>
                <div class="flex items-center space-x-4">
                    <div class="relative" data-hs-dropdown>
                        <button class="py-2 px-4 inline-flex justify-center items-center gap-2 rounded-md border font-medium bg-white text-gray-700 shadow-sm align-middle hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-white focus:ring-blue-600 transition-all text-sm dark:bg-slate-900 dark:hover:bg-slate-800 dark:border-gray-700 dark:text-gray-400 dark:hover:text-white dark:focus:ring-offset-gray-800" type="button">
                            Actions
                            <svg class="hs-dropdown-open:rotate-180 w-2.5 h-2.5 text-gray-600" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M2 5L8.16086 10.6869C8.35239 10.8637 8.64761 10.8637 8.83914 10.6869L15 5" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                            </svg>
                        </button>
                        <div class="hs-dropdown-menu transition-[opacity,margin] duration hs-dropdown-open:opacity-100 opacity-0 hidden min-w-[15rem] bg-white shadow-md rounded-lg p-2 mt-2 dark:bg-gray-800 dark:border dark:border-gray-700" aria-labelledby="hs-dropdown-basic">
                            <a class="flex items-center gap-x-3.5 py-2 px-3 rounded-md text-sm text-gray-800 hover:bg-gray-100 focus:ring-2 focus:ring-blue-500 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-gray-300" href="#">
                                Add New Product
                            </a>
                            <a class="flex items-center gap-x-3.5 py-2 px-3 rounded-md text-sm text-gray-800 hover:bg-gray-100 focus:ring-2 focus:ring-blue-500 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-gray-300" href="#">
                                View Orders
                            </a>
                            <a class="flex items-center gap-x-3.5 py-2 px-3 rounded-md text-sm text-gray-800 hover:bg-gray-100 focus:ring-2 focus:ring-blue-500 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-gray-300" href="#">
                                Generate Report
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- End Page Heading -->

        <!-- Stats -->
        <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-4 mb-8">
            <!-- Sales Card -->
            <div class="flex flex-col bg-white border shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
                <div class="p-4 md:p-5">
                    <div class="flex items-center gap-x-2">
                        <span class="text-xs font-semibold uppercase text-gray-600 dark:text-gray-400">
                            Total Sales
                        </span>
                    </div>
                    <div class="mt-1 flex items-center gap-x-2">
                        <h3 class="text-xl sm:text-2xl font-medium text-gray-800 dark:text-gray-200">
                            $45,231.89
                        </h3>
                        <span class="flex items-center text-green-600">
                            <svg class="w-3 h-3" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M6 9.5L6 2.5" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                                <path d="M2.5 6L6 2.5L9.5 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                            <span class="text-sm font-medium">12.5%</span>
                        </span>
                    </div>
                </div>
            </div>

            <!-- Orders Card -->
            <div class="flex flex-col bg-white border shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
                <div class="p-4 md:p-5">
                    <div class="flex items-center gap-x-2">
                        <span class="text-xs font-semibold uppercase text-gray-600 dark:text-gray-400">
                            Total Orders
                        </span>
                    </div>
                    <div class="mt-1 flex items-center gap-x-2">
                        <h3 class="text-xl sm:text-2xl font-medium text-gray-800 dark:text-gray-200">
                            2,431
                        </h3>
                        <span class="flex items-center text-green-600">
                            <svg class="w-3 h-3" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M6 9.5L6 2.5" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                                <path d="M2.5 6L6 2.5L9.5 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                            <span class="text-sm font-medium">8.2%</span>
                        </span>
                    </div>
                </div>
            </div>

            <!-- Customers Card -->
            <div class="flex flex-col bg-white border shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
                <div class="p-4 md:p-5">
                    <div class="flex items-center gap-x-2">
                        <span class="text-xs font-semibold uppercasetext-gray-600 dark:text-gray-400">
                          Total Customers
                      </span>
                  </div>
                  <div class="mt-1 flex items-center gap-x-2">
                      <h3 class="text-xl sm:text-2xl font-medium text-gray-800 dark:text-gray-200">
                          1,845
                      </h3>
                      <span class="flex items-center text-green-600">
                          <svg class="w-3 h-3" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                              <path d="M6 9.5L6 2.5" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                              <path d="M2.5 6L6 2.5L9.5 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                          </svg>
                          <span class="text-sm font-medium">4.7%</span>
                      </span>
                  </div>
              </div>
          </div>

          <!-- Revenue Card -->
          <div class="flex flex-col bg-white border shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
              <div class="p-4 md:p-5">
                  <div class="flex items-center gap-x-2">
                      <span class="text-xs font-semibold uppercase text-gray-600 dark:text-gray-400">
                          Average Order Value
                      </span>
                  </div>
                  <div class="mt-1 flex items-center gap-x-2">
                      <h3 class="text-xl sm:text-2xl font-medium text-gray-800 dark:text-gray-200">
                          $248.32
                      </h3>
                      <span class="flex items-center text-red-600">
                          <svg class="w-3 h-3" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                              <path d="M6 2.5L6 9.5" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                              <path d="M9.5 6L6 9.5L2.5 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                          </svg>
                          <span class="text-sm font-medium">2.3%</span>
                      </span>
                  </div>
              </div>
          </div>
      </div>

      <!-- Recent Orders -->
      <div class="flex flex-col">
          <div class="-m-1.5 overflow-x-auto">
              <div class="p-1.5 min-w-full inline-block align-middle">
                  <div class="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden dark:bg-slate-900 dark:border-gray-700">
                      <!-- Header -->
                      <div class="px-6 py-4 grid gap-3 md:flex md:justify-between md:items-center border-b border-gray-200 dark:border-gray-700">
                          <div>
                              <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200">
                                  Recent Orders
                              </h2>
                          </div>

                          <div>
                              <div class="inline-flex gap-x-2">
                                  <a class="py-2 px-3 inline-flex justify-center items-center gap-2 rounded-md border font-medium bg-white text-gray-700 shadow-sm align-middle hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-white focus:ring-blue-600 transition-all text-sm dark:bg-slate-900 dark:hover:bg-slate-800 dark:border-gray-700 dark:text-gray-400 dark:hover:text-white dark:focus:ring-offset-gray-800" href="#">
                                      View All Orders
                                  </a>
                              </div>
                          </div>
                      </div>
                      <!-- End Header -->

                      <!-- Table -->
                      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                          <thead class="bg-gray-50 dark:bg-slate-800">
                              <tr>
                                  <th scope="col" class="px-6 py-3 text-left">
                                      <div class="flex items-center gap-x-2">
                                          <span class="text-xs font-semibold uppercase tracking-wide text-gray-800 dark:text-gray-200">
                                              Order ID
                                          </span>
                                      </div>
                                  </th>
                                  <th scope="col" class="px-6 py-3 text-left">
                                      <div class="flex items-center gap-x-2">
                                          <span class="text-xs font-semibold uppercase tracking-wide text-gray-800 dark:text-gray-200">
                                              Customer
                                          </span>
                                      </div>
                                  </th>
                                  <th scope="col" class="px-6 py-3 text-left">
                                      <div class="flex items-center gap-x-2">
                                          <span class="text-xs font-semibold uppercase tracking-wide text-gray-800 dark:text-gray-200">
                                              Status
                                          </span>
                                      </div>
                                  </th>
                                  <th scope="col" class="px-6 py-3 text-left">
                                      <div class="flex items-center gap-x-2">
                                          <span class="text-xs font-semibold uppercase tracking-wide text-gray-800 dark:text-gray-200">
                                              Total
                                          </span>
                                      </div>
                                  </th>
                                  <th scope="col" class="px-6 py-3 text-right"></th>
                              </tr>
                          </thead>

                          <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                              <tr>
                                  <td class="h-px w-px whitespace-nowrap">
                                      <div class="px-6 py-3">
                                          <span class="text-sm text-gray-600 dark:text-gray-400">#3456</span>
                                      </div>
                                  </td>
                                  <td class="h-px w-px whitespace-nowrap">
                                      <div class="px-6 py-3">
                                          <div class="flex items-center gap-x-2">
                                              <span class="text-sm text-gray-600 dark:text-gray-400">John Doe</span>
                                          </div>
                                      </div>
                                  </td>
                                  <td class="h-px w-px whitespace-nowrap">
                                      <div class="px-6 py-3">
                                          <span class="inline-flex items-center gap-1.5 py-0.5 px-2 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                                              Completed
                                          </span>
                                      </div>
                                  </td>
                                  <td class="h-px w-px whitespace-nowrap">
                                      <div class="px-6 py-3">
                                          <span class="text-sm text-gray-600 dark:text-gray-400">$345.00</span>
                                      </div>
                                  </td>
                                  <td class="h-px w-px whitespace-nowrap">
                                      <div class="px-6 py-1.5">
                                          <a class="inline-flex items-center gap-x-1.5 text-sm text-blue-600 decoration-2 hover:underline font-medium" href="#">
                                              View
                                          </a>
                                      </div>
                                  </td>
                              </tr>
                              <!-- Add more order rows as needed -->
                          </tbody>
                      </table>
                  </div>
              </div>
          </div>
      </div>
  </div>
  <!-- End Content -->

  <!-- Scripts -->
  <script src="/preline/preline.js"></script>
  <script>
      // Initialize Preline
      window.addEventListener('load', function () {
          window.HSStaticMethods.autoInit();
      });
  </script>
</body>
</html>